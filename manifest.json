{
    "manifest_version": 2,
    "name": "Bold First 3 Letters",
    "version": "1.0",
    "description": "Make the first 3 letters of each word bold.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": [
            "content.js"
        ],
        "persistent": false
    }
}